[gd_resource type="Shader" format=2]

[resource]
code = "shader_type spatial; 

vec3 get_color(float diffuse) {
	if (diffuse < 0.2) {
		return vec3(0.0);
	} else if (diffuse < 0.4) {
		return vec3(0.2);
	} else if (diffuse < 0.6) {
		return vec3(0.4);
	} else if (diffuse < 0.8) {
		return vec3(0.6);
	} else if (diffuse < 1.0) {
		return vec3(0.8);
	} else {
		return vec3(1.0);
	}
}

void light() {
	float cell_diffuse = (dot(NORMAL, LIGHT) + 1.0) / 2.0;
	vec3 color = get_color(cell_diffuse);
	DIFFUSE_LIGHT += color;
}"
